.search-wrapper {
    align-items: center;
}

.search {
    margin: 20rpx 30rpx;
    flex: 1;
    height: 60rpx;
    border: 2rpx solid #25c9c2;
    border-radius: 10rpx;
    padding-left: 20rpx;
    font-size: 30rpx;
}

.pc-search {
    font-size: 24rpx;
    color: gray;
}

.btn-search {
    width: 150rpx;
    height: 60rpx;
    margin-right: 30rpx;
}


.item-wrapper {
    height: 78px;
    border-bottom: 2rpx solid #777777;
}

.right-wrapper {
    flex: 1;
    padding: 10px 0;
}

.title {
    font-size: 26rpx;
    color: black;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.category {
    padding: 10rpx 0;
    font-size: 26rpx;
    color: red;
}

.cate-title {
    margin-right: 10rpx;
    color: black;
}

.average {
    font-size: 26rpx;
    margin-left: 20rpx;
    color: #25c9c2;
}

